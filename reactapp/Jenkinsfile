pipeline {
    agent any

    environment {
        IMAGE_NAME = 'blog_nextjs_app'
        CONTAINER_NAME = 'blog_nextjs_container'
        PORT = '3000'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'git@github.com:jjoevv/blog_nextjs.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t $IMAGE_NAME ."
            }
        }

        stage('Run Docker Container') {
            steps {
                // Xóa container cũ nếu có và chạy mới
                sh "docker rm -f $CONTAINER_NAME || true"
                sh "docker run -d --name $CONTAINER_NAME -p $PORT:$PORT $IMAGE_NAME"
            }
        }
    }

    post {
        success {
            echo "✅ App is running at http://localhost:$PORT"
        }
        failure {
            echo '❌ Build failed!'
        }
    }
}

