pipeline {
  agent {
    docker {
      image 'node:18' // hoặc node:20 nếu app cần mới hơn
    }
  }

  environment {
    APP_DIR = 'reactapp';
    HOME = '/var/lib/jenkins';
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/jjoevv/blog_nextjs.git'
      }
    }

    stage('Install Dependencies') {
  steps {
    dir('reactapp') {
      sh '''
        rm -rf node_modules package-lock.json
        npm cache clean --force
        npm install
      '''
    }
  }
}


    stage('Build') {
      steps {
        dir("${APP_DIR}") {
          sh 'npm run build'
        }
      }
    }

    stage('Run app') {
      steps {
        dir("${APP_DIR}") {
          sh 'nohup npm start &'
        }
      }
    }
  }

  post {
    success {
      echo "✅ App is running"
    }
    failure {
      echo "❌ Build failed"
    }
  }
}
