pipeline {
    agent any

    environment {
        APP_DIR = 'reactapp' // thư mục chứa source code (nếu cần)
        PORT = '3000'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/jjoevv/blog_nextjs.git'
            }
        }

        stage('Install dependencies') {
            steps {
                dir("${APP_DIR}") {
                    sh 'npm install'
                }
            }
        }

        stage('Build') {
            steps {
                dir("${APP_DIR}") {
                    sh 'npm run build'
                }
            }
        }

        stage('Start app') {
            steps {
                script {
                    // Dừng app đang chạy nếu có (tuỳ thuộc vào cách start)
                    sh "pkill -f 'node' || true"

                    // Chạy app nền (Next.js: npm run start)
                    dir("${APP_DIR}") {
                        sh 'nohup npm start &'
                    }
                }
            }
        }
    }

    post {
        success {
            echo "✅ App đang chạy ở http://localhost:$PORT"
        }
        failure {
            echo "❌ Build failed"
        }
    }
}
