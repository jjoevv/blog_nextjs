pipeline {
  agent {
    docker {
      image 'node:18' // hoặc node:20 nếu app cần mới hơn
    }
  }

  environment {
    APP_DIR = 'reactapp'
  }
stages {
        stage('Test') {
            steps {
                sh 'node --eval "console.log(process.platform,process.env.CI)"'
            }
        }
    }
}
